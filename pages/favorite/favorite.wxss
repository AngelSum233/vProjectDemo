.top{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.left{
  font-size: 38rpx;
  color: black;
  flex: 3;
  padding-left: 40rpx;
}
.topimg1{
  width: 42rpx;
  height: 42rpx;
  padding-right: 20rpx;
}
.right{
  flex: 1;
